<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Parte superior sin cambios -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Color de fondo azul -->
        </shape>
    </item>
    <!-- Parte inferior con bordes redondeados -->
    <item android:top="0dp"> <!-- Ajusta la altura que desees para la parte inferior -->
        <shape android:shape="rectangle">
            <solid android:color="#0019FF" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="60dp" android:bottomRightRadius="60dp" />

        </shape>
    </item>
</layer-list>


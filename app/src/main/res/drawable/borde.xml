<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado normal del botón -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Color de fondo transparente -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Borde blanco con 2dp de ancho -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados de 8dp de radio -->
        </shape>
    </item>

    <!-- Estado del botón cuando se presiona -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" /> <!-- Color de fondo semi-transparente al presionar -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Borde blanco con 2dp de ancho -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados de 8dp de radio -->
        </shape>
    </item>
</selector>

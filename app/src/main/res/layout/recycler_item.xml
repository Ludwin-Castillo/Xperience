<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cargarimagen"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Image" />

        <TextView
            android:id="@+id/recTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Titulo"
            android:textColor="@color/darkPurple"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recTitulo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Categoria"
            android:textColor="@color/darkPurple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recSinopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recCategoria"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Sinopsis"
            android:textColor="@color/darkPurple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recSinopsis"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Hora"
            android:textColor="@color/darkPurple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recDuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recSinopsis"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Duracion"
            android:textColor="@color/darkPurple"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>